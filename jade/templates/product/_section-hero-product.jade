section.hero
  .wrapper
    +logo-block()(style='logo-block--dark logo-block--wrapper', mail=1)
    h1.title
      .upper-part
        span.dn-sm
          | Welcome to&nbsp;
        strong
          | #{domainName}

      .bottom-part
        | this domain and logo are for sale
    .price-row
      .dropdown.price-item.price-mid
        .text
          | domain + logo concept
        img.icon(src="/img/down.svg")
        .option-box
          .option
            | domain
          .option
            | logo concept

      .divider.divider-small
      .price.price-item.price-mid
        | = $ #{todayPrice}
        .year
          | TODAY PRICE
      .divider.divider-normal.dn-md
      .price.price-item.price-small.dn-md
        | ≥ $ #{oneYearPrice}
        .year
          | 2019
      .divider.divider-normal.dn-lg
      .price.price-item.price-small.dn-lg
        | ≥ $ #{twoYearPrice}
        .year
          | 2020
